<div class="col-md-4 col-md-offset-3">
      <div class"form-group">
        <%= form_for User.new , :url => register_path, remote: 'true' do |f| %>
          <%= f.label 'email' %>
          <%= f.email_field 'email', class: 'form-control'  %>
          <%= f.label 'Amount' %>
          <%= f.text_field 'nickname', class: 'form-control' %>
          <%= f.submit %>
        <% end %>
      </div>
</div>
