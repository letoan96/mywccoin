          <div class="panel-body articles-container">
            <% @upcoming_matches.each do |match|  %>
            <div class="article border-bottom">
              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-2 col-md-2 date">
                    <div class="large"><%=  match.time.strftime("%d") %></div>
                    <div class="text-muted"><%=  match.time.strftime("%B") %></div>
                  </div>
                  <div class="col-xs-10 col-md-10">
                    <h4><a class="upcoming_match" id="<%= match.id %>" data-name="<%= match.team_1.name %> vs <%= match.team_2.name %>"><%= match.team_1.name %> vs <%= match.team_2.name %></a></h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer at sodales nisl. Donec malesuada orci ornare risus finibus feugiat.</p>
                  </div>
                </div>
              </div>
              <div class="clear"></div>
            </div><!--End .article-->
            <% end %>
          </div>

        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            Create new bet contract
          </div>
          <div class="panel-body">


            <%= form_tag admin_match_setup_path, method: :put, remote: 'true', :class => 'form-horizontal' do  %>
              <%= hidden_field_tag :match_id, nil, :id => "match_id" %>
              <div class="form-group">
                <%= label_tag 'Match', nil ,:class => "col-md-3 control-label" %>
                <div class="col-md-9">
                <%= text_field_tag :match, nil ,:class => "form-control", :id => "match_name"  %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag 'Description', nil ,:class => "col-md-3 control-label" %>
                <div class="col-md-9">
                <%= text_area_tag :description, nil ,:class => "form-control" %>
                </div>
              </div>
              <div class="form-group">
                  <div class="col-md-12 widget-right">
              <%= submit_tag "Submit", class: "btn btn-default btn-md pull-right" %>
            </div>
          </div>

            <% end %>

          </div>
